<h1>Users</h1>
<div class="row justify-content-center">
  <%= link_to '<button type="button">Add new user</button>'.html_safe, new_user_path %>
</div>
<div clas="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
      <th>First name</th>
      <th>Last name</th>
      <th>Email Address</th>
      <th>Phone Number</th>
      <th>Role</th>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Confirm', resource: 'User'} %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
