<h1>User</h1>
<div clas="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
      <th>First name</th>
      <th>Last name</th>
      <th>Email Address</th>
      <th>Phone Number</th>
      <th>Role</th>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.first_name %></td>
          <td><%= @user.last_name %></td>
          <td><%= @user.email %></td>
          <td><%= @user.phone_number %></td>
          <td><%= @user.role %></td>
          <td><%= link_to 'Show', user_path(@user) %></td>
          <td><%= link_to 'Edit', edit_user_path(@user) %></td>
          <td><%= link_to 'Delete', @user, method: :delete, data: {confirm: 'Confirm', resource: 'User'} %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>