<div class="form-group">
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :first_name, label: false, placeholder: 'First Name', input_html: { class: 'form-control' } %>
    <br>
    <%= f.input :last_name, label: false, placeholder: 'Last Name', input_html: { class: 'form-control' } %>
    <br>
    <%= f.input :email, placeholder: 'Email', input_html: { class: 'form-control' } %>
    <br>
    <%= f.input :phone_number, placeholder: 'Phone Number', input_html: { class: 'form-control' } %>
    <br>
    <%= f.input :role, as: :radio_buttons, collection: User.roles.keys.to_a %>
    <br>
    <%= f.input :password, placeholder: 'Password', input_html: { class: 'form-control' } %>
    <br>
    <div class="action-group">
      <%= f.button :submit, 'Submit' %>
    </div>
  <% end %>
</div>
